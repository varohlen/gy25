---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title,
  description = "Utforska den nya gymnasiereformen GY25. Se alla ämnen, nivåer och förändringar från GY11.",
  image = "/favicon.svg"
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = 'https://gy25.se';
const canonicalURL = `${siteUrl}${currentPath}`;
const imageUrl = `${siteUrl}${image}`;

const activeClass = "inline-flex items-center px-1 pt-1 border-b-2 border-blue-500 text-sm font-medium text-gray-900";
const defaultClass = "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700";
---

<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />
    
    <!-- Additional Meta -->
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#2563EB" />
    <meta name="author" content="Viktor Arohlén" />
    <meta name="keywords" content="GY25, gymnasiereform, ämnesbetyg, gymnasieskolan, skolverket, gy11" />
    <!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Lexend:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  /* Custom font classes */
  .font-logo { font-family: 'Inter', sans-serif; }
  .font-heading { font-family: 'Lexend', sans-serif; }
  .font-body { font-family: 'Inter', sans-serif; }

  /* Base heading styles */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Lexend', sans-serif;
  }
</style>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col font-body">
    <header class="bg-white shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo/Title -->
          <div class="flex-shrink-0">
            <a href="/" class="flex items-center space-x-2 group">
              <img src="/favicon.svg" alt="" class="h-8 w-8" />
              <span class="text-2xl font-bold text-gray-900 font-logo group-hover:text-gray-700 transition-colors">
                GY25.se
              </span>
            </a>
          </div>

          <!-- Navigation -->
          <div class="flex items-center space-x-4">
            <a 
              href="/gy25" 
              class={`inline-flex items-center px-4 py-2 text-sm font-medium rounded-md
                ${Astro.url.pathname.startsWith('/gy25') 
                  ? 'text-white bg-emerald-600 hover:bg-emerald-700' 
                  : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'}`}
            >
              Ämnen & Kurser
            </a>
            <span class="text-gray-300">|</span>
            <a 
              href="/compare" 
              class={`inline-flex items-center px-4 py-2 text-sm font-medium rounded-md
                ${Astro.url.pathname.startsWith('/compare') 
                  ? 'text-white bg-blue-600 hover:bg-blue-700' 
                  : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'}`}
            >
              Jämför med GY11
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Left side -->
          <div class="flex flex-col space-y-4">
            <div class="flex items-center space-x-2">
              <img src="/favicon.svg" alt="" class="h-6 w-6" />
              <span class="text-lg font-semibold text-gray-900">GY25.se</span>
            </div>
            <p class="text-sm text-gray-600">
              Ett verktyg för att utforska den nya gymnasiereformen.
              Data från <a href="https://www.skolverket.se" class="text-emerald-600 hover:text-emerald-700 underline" target="_blank" rel="noopener noreferrer">Skolverket</a>.
            </p>
          </div>

          <!-- Right side -->
          <div class="flex flex-col space-y-4 md:items-end">
            <div class="flex space-x-4">
              <a href="https://github.com/varohlen/gy25" class="text-gray-500 hover:text-gray-700 transition-colors" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">GitHub</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                </svg>
              </a>
              <a href="mailto:viktor@arohlen.se" class="text-gray-500 hover:text-gray-700 transition-colors">
                <span class="sr-only">Email</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
            </div>
            <nav class="flex space-x-4">
              <a href="/about" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">Om sidan</a>
              <span class="text-gray-300">|</span>
              <a href="https://arohlen.se" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">arohlen.se</a>
            </nav>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
