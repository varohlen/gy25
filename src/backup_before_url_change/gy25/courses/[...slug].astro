---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import CourseView from '../../../components/courses/CourseView.astro';

export async function getStaticPaths() {
  const subjects = await getCollection('gy25-subjects');
  const paths = [];

  subjects.forEach(subject => {
    subject.data.courses?.forEach(course => {
      paths.push({
        params: { 
          slug: `${subject.data.code.toLowerCase()}/${course.code.toLowerCase()}`
        },
        props: { subject, course }
      });
    });
  });

  return paths;
}

const { subject, course } = Astro.props;
---

<Layout title={`${course.name} - ${subject.data.name} - GY25`}>
  <div class="max-w-4xl mx-auto px-4 mt-8 mb-8">
    <!-- Navigation -->
    <div class="mb-8 flex justify-between items-center">
      <a 
        href="/gy25/courses"
        class="text-blue-600 hover:text-blue-800 flex items-center gap-1 text-sm font-medium"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Tillbaka till kurser
      </a>

      <a 
        href={`/gy25/subjects/${subject.data.code.toLowerCase()}`}
        class="text-blue-600 hover:text-blue-800 flex items-center gap-1 text-sm font-medium"
      >
        Till Ã¤mnet {subject.data.name}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <!-- Course View Component -->
    <CourseView 
      course={course}
      subject={subject}
    />
  </div>
</Layout>